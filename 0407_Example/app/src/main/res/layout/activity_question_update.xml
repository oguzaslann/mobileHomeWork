<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    tools:context=".QuestionUpdateActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="15dp"
        >
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:background="@drawable/border_title"
            android:gravity="center"
            android:padding="10dp"
            android:text="Soru Güncelleme"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            />


        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Sorunuz"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Seçenek A"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="179dp" />

        <EditText
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Seçenek B"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="458dp" />

        <EditText
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Seçenek C"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="245dp" />

        <EditText
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Seçenek D"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="387dp" />

        <EditText
            android:id="@+id/correctAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Doğru Cevap"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="317dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:text="Soru zorluk seviyesi"
            android:textColor="@color/black"
            />

        <SeekBar
            android:id="@+id/difficultyLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="20dp"
            android:text="Soru görseli"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:id="@+id/addImageLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <Button
                android:id="@+id/imageButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@color/eagleGreen"
                android:layout_marginLeft="30dp"
                android:text="Seç"
                android:textColor="@color/white"
                android:textAlignment="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/senderButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@color/eagleGreen"
            android:text="Guncelle"
            android:textAlignment="center" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>