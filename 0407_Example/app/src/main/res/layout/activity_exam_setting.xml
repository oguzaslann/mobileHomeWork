<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamSettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="15dp"
        >
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:background="@drawable/border_title"
            android:gravity="center"
            android:padding="10dp"
            android:text="Sınav Ayarları"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            />


        <EditText
            android:id="@+id/examTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Sınav süresi (dk)"
            android:inputType="number" />

        <EditText
            android:id="@+id/examPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Soru başı puan"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:text="Sınav zorluk seviyesi"
            android:textColor="@color/black"
            />

        <SeekBar
            android:id="@+id/difficultyLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:background="@color/eagleGreen"
            android:text="Kaydet"
            android:textAlignment="center" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>